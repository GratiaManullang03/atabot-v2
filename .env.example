# ATABOT 2.0 Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="ATABOT 2.0"
APP_VERSION="2.0.0"
APP_DESCRIPTION="Universal Adaptive Business Intelligence"
DEBUG=True
PORT=8000
LOG_LEVEL=INFO

# Database Configuration (PostgreSQL with pgvector)
# Replace with your actual database URL
DATABASE_URL=postgresql://avnadmin:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
DATABASE_POOL_TIMEOUT=30

# VoyageAI API Configuration (for embeddings)
# Get your API key from https://www.voyageai.com/
VOYAGE_API_KEY=pa-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VOYAGE_MODEL=voyage-3.5-lite
VOYAGE_INPUT_TYPE=document
EMBEDDING_DIMENSIONS=1024
EMBEDDING_BATCH_SIZE=100

# LLM Configuration (Using Poe API)
# Get your API key from https://poe.com/api_key
POE_API_KEY=p-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LLM_MODEL=GPT-3.5-Turbo
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.1
LLM_TIMEOUT=30

# Performance Settings
SYNC_BATCH_SIZE=1000
SYNC_MAX_WORKERS=4
VECTOR_SEARCH_LIMIT=10
MAX_CONCURRENT_REQUESTS=50
QUERY_TIMEOUT=30

# Feature Flags
ENABLE_STREAMING=True
ENABLE_REALTIME_SYNC=True
ENABLE_CACHE=True
ENABLE_QUERY_DECOMPOSITION=True
ENABLE_HYBRID_SEARCH=True

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
# Optional: Redis URL for distributed caching
# REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (adjust for production)
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090